<% content_for :title, "Posts" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">게시글</h1>
    <%= link_to "새 게시글", new_post_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="my-12 p-8 bg-slate-100 rounded-xl shadow-lg">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-slate-800 mb-2">새로운 소식을 놓치지 마세요</h2>
      <p class="text-slate-600 mb-6">새로운 글이 올라오면 가장 먼저 메일로 알려드립니다.</p>
      <%= form_with(model: Subscriber.new, url: subscribers_path, local: true, class: "w-full") do |form| %>
        <div class="w-full max-w-lg flex">
          <%= form.email_field :email, class: "w-full py-5 pl-14 pr-44", placeholder: "여기에 이메일을 적어주세요", required: true %>
          <%= form.submit "구독하기", class: "flex-shrink-0 px-10 py-4 bg-blue-600 text-white font-semibold cursor-pointer rounded-lg" %>
        </div>
      <% end %>
    </div>
  </div>

  <div id="posts" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render post %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "보기", post, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "수정", edit_post_path(post), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "삭제", post, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "정말 삭제하시나요?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">글을 찾을 수 없습니다.</p>
    <% end %>
  </div>
</div>
